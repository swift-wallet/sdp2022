<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sdp.swiftwallet.presentation.fragments.HomeFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/home_nested_frag_container"
        android:name="com.sdp.swiftwallet.presentation.fragments.wallets.WalletItemFragment"
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/no_seed"
            android:textSize="@dimen/wallet_important"
            android:textColor="@color/black"
            android:id="@+id/seed_not_setup"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/setup_seed"
            android:id="@+id/seed_setup"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center">

        <ImageButton
            android:id="@+id/create_address_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@color/zxing_transparent"
            android:src="@drawable/ic_baseline_add_circle_outline_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nav_wallets"
        android:layout_gravity="top"
        android:textSize="@dimen/nav_title"
        android:textColor="@color/black"
        android:layout_margin="@dimen/nav_title_margin"
        />

</FrameLayout>