<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sdp.cryptowalletapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.sdp.swiftwallet.data.repository.UserDatabase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwiftWallet">

        <activity
            android:name="com.sdp.swiftwallet.TransactionHistoryActivity"
            android:exported="false"
            android:parentActivityName="com.sdp.swiftwallet.presentation.main.MainActivity" />

        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:parentActivityName="com.sdp.swiftwallet.presentation.qrcode.QRActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />

        <activity
            android:name="com.sdp.swiftwallet.presentation.main.MainActivity"
            android:exported="false" />
        <activity
            android:name="com.sdp.swiftwallet.presentation.qrcode.QRActivity"
            android:exported="false"
            android:parentActivityName="com.sdp.swiftwallet.presentation.main.MainActivity" />
        <activity
            android:name="com.sdp.swiftwallet.WalletActivity"
            android:exported="false"
            android:parentActivityName="com.sdp.swiftwallet.presentation.main.MainActivity" />
        <activity
            android:name="com.sdp.swiftwallet.presentation.signIn.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sdp.swiftwallet.CryptoValuesActivity"
            android:exported="false"
            android:parentActivityName="com.sdp.swiftwallet.presentation.main.MainActivity" />
    </application>

</manifest>
