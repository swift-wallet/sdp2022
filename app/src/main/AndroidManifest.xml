<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sdp.cryptowalletapp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".SwiftWalletApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SwiftWallet">
        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.message.AddContactActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.main.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.wallet.WalletSelectActivity"
            android:exported="false"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity
            android:name=".presentation.wallet.WalletInfoActivity"
            android:exported="false"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity
            android:name=".presentation.cryptoGraph.CryptoGraphActivity"
            android:exported="false"
            android:parentActivityName=".presentation.cryptoGraph.CryptoValuesActivity" />
        <activity
            android:name=".presentation.signIn.RegisterActivity"
            android:exported="false"
            android:parentActivityName=".presentation.signIn.LoginActivity" />
        <activity
            android:name=".presentation.wallet.CreateSeedActivity"
            android:exported="false"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity
            android:name=".presentation.transactions.TransactionActivity"
            android:exported="false"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:parentActivityName=".presentation.main.MainActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:name=".presentation.main.MainActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.signIn.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.cryptoGraph.CryptoValuesActivity"
            android:exported="false"
            android:parentActivityName=".presentation.main.MainActivity" />
        <activity
            android:name=".presentation.signIn.ForgotPasswordActivity"
            android:exported="false"
            android:parentActivityName=".presentation.main.MainActivity" />
    </application>

</manifest>